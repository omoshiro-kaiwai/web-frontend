---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// TypeScript interface for type safety
interface Member {
  id: number;
  name: string;
  bio: string;
  twitterUsername: string;
  profileIcon: string;
}

// Provided member data
const membersData: Member[] = [
  {
    id: 99,
    name: 'おもしろ界隈',
    bio: 'みんなで記事をあげるときのユーザー',
    twitterUsername: 'omoshirokaiwai',
    profileIcon: 'user99.jpg',
  },
  {
    id: 1,
    name: 'Tsusu',
    bio: 'Web学習、自炊、ラーメン…日々の小さな好きを大切に、のほほんと生きています。',
    twitterUsername: 'tsusu0409',
    profileIcon: 'user1.jpg',
  },
  {
    id: 2,
    name: 'いけじーん',
    bio: 'ゲームスキルがとにかく高い生粋のゲームオタク。',
    twitterUsername: 'i_ke_ke_ke',
    profileIcon: 'user2.jpg',
  },
  {
    id: 3,
    name: 'れんきゅんなう☆',
    bio: '夢と魔法の国の住人。年中夢中なディズニー愛で、あなたを魔法の世界へ☆',
    twitterUsername: 'omoshirokaiwai',
    profileIcon: 'user3.jpg',
  },
  {
    id: 4,
    name: 'ogeeeen',
    bio: '理系とゲームの二刀流。知性と戦略を武器に、あらゆる勝利を掴み獲る！',
    twitterUsername: 'omoshirokaiwai',
    profileIcon: 'user4.jpg',
  },
  {
    id: 5,
    name: 'Sailing',
    bio: 'NBAを愛する巨漢がおもしろ界隈に見参！',
    twitterUsername: 'omoshirokaiwai',
    profileIcon: 'user5.jpg',
  },
  {
    id: 6,
    name: 'ひかぽん卍',
    bio: '満を持して登場！おもしろ界隈随一の多ジャンルオタク。',
    twitterUsername: 'omoshirokaiwai',
    profileIcon: 'user6.jpg',
  },
];

// Filter out the general user to display only members 1-6
const members = membersData.filter(member => member.id !== 99);
---

<Layout title="About Us | おもしろ界隈">
  <Header />
  <main class="container">

  <section class="about-section">
    <h1 class="about-title">このサイトについて</h1>
    <div class="about-description">
      <p>
        「おもしろ界隈」へようこそ！<br />
        ここは、気づけば10年来の付き合いになる友人たちで始めた、<br />
        ゆるくてマイペースなブログサイトです。
      </p>
      <p>
        Web制作から、お絵描き、写真、ゲーム、日記や悩みまで<br />
        幅広く取り扱っております。ごゆっくりどうぞ。
      </p>
    </div>
  </section>
  
  <h2 class="page-title">MEMBERS</h2>
  <div class="members-grid">
    {members.map(member => (
      <article class="member-card">
        <img src={`/images/${member.profileIcon}`} alt={member.name} class="profile-icon" />
        <h3 class="member-name">{member.name}</h3>
        <p class="member-bio">{member.bio}</p>
        <a href={`https://twitter.com/${member.twitterUsername}`} class="social-link" target="_blank" rel="noopener noreferrer">
          @{member.twitterUsername}
        </a>
      </article>
    ))}
  </div>
</main>
<Footer />
</Layout>

<style>
  .container {
    max-width: 960px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  /* --- Styles for About Section --- */
  .about-section {
    margin-bottom: 5rem;
    text-align: center;
  }

  .about-title {
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: #374151;
  }

  .about-description {
    max-width: 650px;
    margin: 0 auto;
    font-size: 1.1rem;
    color: #4b5563;
    line-height: 2;
    text-align: left;
  }

  .about-description p {
    margin-bottom: 1.5rem;
  }

  .about-description p:last-child {
    margin-bottom: 0;
  }

  .page-title {
    text-align: center;
    font-size: 1.875rem;
    font-weight: 700;
    margin-bottom: 3rem;
    color: #374151;
  }

  .members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  .member-card {
    background-color: #fff;
    border-radius: 0.75rem;
    padding: 2rem 1.5rem;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1),
                0 2px 4px -2px rgb(0 0 0 / 0.1);
    display: flex;
    flex-direction: column;
  }

  .profile-icon {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 1rem;
    box-shadow: 0 4px 14px -4px rgb(0 0 0 / 0.2);
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0.5rem 0;
    color: #1f2937;
  }

  .member-bio {
    color: #4b5563;
    margin: 0.5rem 0;
    flex-grow: 1;
  }

  .social-link {
    display: inline-block;
    margin-top: 1rem;
    color: #8b5cf6;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    text-decoration: underline;
    opacity: 0.8;
  }

  /* ▼▼ レスポンシブ対応 ▼▼ */
  @media (max-width: 768px) {
    .about-title {
      font-size: 1.5rem;
    }

    .about-description {
      font-size: 1rem;
      padding: 0 0.5rem;
    }

    .members-grid {
      gap: 1.5rem;
    }

    .member-card {
      padding: 1.5rem 1rem;
    }

    .profile-icon {
      width: 80px;
      height: 80px;
    }

    .member-name {
      font-size: 1.125rem;
    }

    .page-title {
      font-size: 1.5rem;
      margin-bottom: 2rem;
    }
  }
  /* ▲▲ レスポンシブ対応 ▲▲ */
</style>
