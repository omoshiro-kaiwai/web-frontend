---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Layout from './Layout.astro';

// frontmatterからtitleを受け取る
const { frontmatter } = Astro.props;
---
<Layout title={`${frontmatter.title} | おもしろ界隈`}>
  <Header />
  <main class="container">
    <article class="post-content">
      <div class="post-header">
        <h1 class="post-title">{frontmatter.title}</h1>
        <p class="post-date">公開日: {frontmatter.date}</p>
      </div>
      
      <slot />
    </article>
  </main>
  <Footer />
</Layout>

<style>
  .container {
    max-width: 720px; /* ブログ記事は横幅を少し狭めると読みやすい */
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .post-header {
    margin-bottom: 2rem;
    border-bottom: 1px solid #e5e7eb;
    padding-bottom: 1rem;
  }

  .post-title {
    font-size: 2.25rem; /* text-4xl */
    font-weight: 800; /* font-extrabold */
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .post-date {
    color: #6b7280;
    font-size: 0.875rem;
  }

  /* ▼ ここから下がMarkdownから変換されたHTML要素のスタイル ▼ */
  .post-content {
    /* 全体の文字スタイル */
    color: #374151;
    line-height: 1.7; /* 行間を広めに */
  }

  .post-content :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .post-content :global(a) {
    color: #8b5cf6; /* キーカラーの紫 */
    text-decoration: underline;
    transition: color 0.2s ease;
  }
  .post-content :global(a:hover) {
    color: #6d28d9;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .post-content :global(blockquote) {
    padding-left: 1rem;
    border-left: 4px solid #d1d5db;
    margin: 1.5rem 0;
    color: #6b7280;
    font-style: italic;
  }

  /* ▼▼▼ ここから追記 ▼▼▼ */

  /* 記事内の画像のスタイル */
  .post-content :global(img) {
    display: block; /* 中央寄せするためにblock要素に */
    max-width: 100%; /* 横幅の上限を90%に設定 */
    height: auto; /* 高さは自動調整して比率を維持 */
    margin: 2rem auto; /* 上下の余白と、左右の中央寄せ */
    border-radius: 0.5rem; /* 角を少し丸める */
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  }

  /* YouTube埋め込み動画(iframe)のスタイル */
  .post-content :global(iframe) {
    display: block; /* 中央寄せするためにblock要素に */
    width: 100%; /* 横幅を90%に設定 */
    aspect-ratio: 16 / 9; /* 16:9の比率を維持 */
    height: auto; /* 高さは自動調整 */
    margin: 2rem auto; /* 上下の余白と、左右の中央寄せ */
    border: none;
    border-radius: 0.5rem;
  }
  
  /* ▲▲▲ ここまで追記 ▲▲▲ */

  .post-content :global(pre) {
    background-color: #1f2937;
    color: #e5e7eb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto; /* 横に長いコードはスクロール */
    margin-bottom: 1.5rem;
  }

  .post-content :global(code) {
    font-family: 'Courier New', Courier, monospace;
  }
</style>